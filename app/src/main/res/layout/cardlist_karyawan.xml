<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/list_shape">

    <LinearLayout
        android:id="@+id/layout_card_karyawan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/kiri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idNama"
                android:layout_width="200dp"
                android:layout_height="30dp"
                tools:text="@string/nama"
                android:textStyle="bold"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/idDivisi"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@+id/idNama"
                tools:text="@string/divisi"
                android:textStyle="normal"
                android:fontFamily="sans-serif-thin"
                android:textSize="14sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/kanan"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/kiri"
            android:gravity="center">

            <TextView
                android:id="@+id/idGaji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/gaji"
                android:textStyle="normal"
                android:fontFamily="sans-serif-thin"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>